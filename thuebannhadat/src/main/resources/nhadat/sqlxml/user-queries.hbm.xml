<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<query name="UserDao.getNguoiDungExistByDienThoai">
	<![CDATA[
        SELECT n
        FROM NguoiDung n
        WHERE n.dienThoai = :dienThoai
        ]]>
	</query>
	
	<query name="UserDao.getNguoiDungByEmail">
	<![CDATA[
        SELECT n
        FROM NguoiDung n
        WHERE n.email = :email
        ]]>
	</query>
	
	<query name="UserDao.checkLoginByDienThoai">
	<![CDATA[
        SELECT n
        FROM NguoiDung n
        WHERE n.dienThoai = :dienThoai
             AND n.matKhau = :matKhau
        ]]>
	</query>
	
</hibernate-mapping>